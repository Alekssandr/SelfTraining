<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
                name="movie"
                type="com.intive.selftraining.selftraining.network.models.Result" />
    </data>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foregroundGravity="center">
        <TextView
                android:text="@{movie.title}"
                android:layout_width="0dp"
                android:layout_height="19dp"
                android:layout_gravity="center_horizontal"
                android:foregroundGravity="center"
                android:id="@+id/tvTitle" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                tools:text="title" app:layout_constraintStart_toEndOf="@+id/ivPoster"
                android:layout_marginStart="8dp"/>

        <TextView
                android:text="@{movie.release_date}"
                android:layout_width="0dp"
                android:layout_gravity="center_horizontal"
                android:foregroundGravity="center"
                android:layout_height="wrap_content" android:id="@+id/tvDate"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tvTitle" app:layout_constraintEnd_toEndOf="parent"
                tools:text="date" app:layout_constraintStart_toEndOf="@+id/ivPoster"
                android:layout_marginTop="8dp" android:layout_marginStart="8dp"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/ic_launcher_background"
                android:id="@+id/ivPoster"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.0"/>
        <!--app:configuration="{@movie.poster_path}"-->
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvOverview" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tvDate" app:layout_constraintStart_toEndOf="@+id/ivPoster"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" tools:text="overview"/>
    </android.support.constraint.ConstraintLayout>
</layout>